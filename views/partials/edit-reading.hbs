<form class="box" action="/station/{{station._id}}/updatereading/{{reading._id}}" method="POST">
  <label>Reading Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="000" name="code">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="00.0C" name="temperature">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="00.00kMh" name="windpressure">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="00hPa" name="pressure">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="000deg" name="winddirection">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Reading</button>
</form>
